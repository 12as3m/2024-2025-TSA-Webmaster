@page "/drinks"

<PageTitle>Drinks</PageTitle>

<header>
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="false">
        <div class="carousel-inner">
            <div class="carousel-item active" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/Images/Drinks/strawberry lemonade.jpg');">
                <div class="carousel-caption d-flex h-100 align-items-center justify-content-center">
                    <div>
                        <h3 class="fs-2 mb-3">Quench Your Thirst With Our</h3>
                        <h1>Amazing Drinks</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/Images/Drinks/spiced tea masala.jpg');">
                <div class="carousel-caption d-flex h-100 align-items-center justify-content-start">
                    <div class="text-start">
                        <h3 class="fs-2 mb-3">Filled With</h3>
                        <h1>Taste & Energy</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/Images/Drinks/espresso.jpg');">
                <div class="carousel-caption d-flex h-100 align-items-center justify-content-end">
                    <div class="text-end">
                        <h3 class="fs-2 mb-3">Constructed With</h3>
                        <h1>Organic, Local Ingredients</h1>
                    </div>
                </div>
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</header>

<div class="container-fluid giant-container pb-5">

    <div class="display-header-layout container-fluid mb-5">
        <div class="container-sm heading-container">
            <div class="heading-line"></div>
            <h1 class="heading-with-lines display-1">Drinks</h1>
            <div class="heading-line"></div>
        </div>
    </div>

    <div class="container-fluid big-card-layout mb-5">
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-1 straw-lemon">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/strawberry lemonade.jpg" alt="Mango Lassi">
                    <div class="card-body">
                        <h5 class="card-title">Strawberry Lemonade</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 150 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            We use organic, locally sourced strawberries and lemon, reducing transportation costs and supporting sustainable farming practices. The drink is made fresh to order, minimizing food waste.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$4.50</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-2 rose-lmnade">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 offset-lg-6 offset-xl-7 offset-xxl-8 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/rose lemonade.jpg" alt="Rose Lemonade">
                    <div class="card-body">
                        <h5 class="card-title">Rose Lemonade (Gulab Lemonade)</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 140 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            This refreshing drink is made from organic rose water and locally grown lemons. We source our lemons from farms that practice sustainable water usage and use minimal pesticides.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$5.00</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-3 masala-tea">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/spiced tea masala.jpg" alt="Masala Iced Tea">
                    <div class="card-body">
                        <h5 class="card-title">Masala Iced Tea</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 100 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            Our tea is made from locally sourced organic black tea leaves, brewed with sustainably grown spices such as cinnamon, cardamom, and cloves. We offer it iced, which reduces energy consumption compared to traditional hot beverages.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$3.00</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-4 coco-water">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 offset-lg-6 offset-xl-7 offset-xxl-8 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/coconut water.JPG" alt="Fresh Coconut Water">
                    <div class="card-body">
                        <h5 class="card-title">Fresh Coconut Water</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 55 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            Our coconut water comes from fair-trade, sustainably harvested coconuts. The production process ensures minimal environmental damage and provides fair wages for workers in coconut-growing regions.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$4.00</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-3 tamarind-juice">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/imli juice.jpg" alt="Tamarind Juice">
                    <div class="card-body">
                        <h5 class="card-title">Tamarind Juice (Imli Juice)</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 180 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            We use organic tamarind sourced from local farms or fair-trade producers, ensuring the fruit is grown without synthetic pesticides and with minimal water usage.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$3.50</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="individual-big-card container-sm">
            <div style="position: relative;" class="big-card-layout-image-3 espresso">
                <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-4 offset-lg-6 offset-xl-7 offset-xxl-8 card text-center perspective-card" id="card1">
                    <img class="card-img-top" src="/Images/Drinks/espresso.jpg" alt="Tamarind Juice">
                    <div class="card-body">
                        <h5 class="card-title">Espresso</h5>
                        <p>
                            <small>
                                Serving Size: 12 oz | Calories: 18 kcal
                            </small>
                        </p>
                        <p class="card-text">
                            Our espresso is made from 100% Arabica beans, sourced sustainably from farms that prioritize ethical practices and environmental care. The beans are roasted to perfection, delivering a smooth, balanced flavor.
                        </p>
                    </div>
                    <div class="card-footer">
                        <a style="color: var(--accent-color);">$3.50</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

